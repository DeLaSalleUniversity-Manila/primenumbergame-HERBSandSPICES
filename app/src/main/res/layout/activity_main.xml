<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#461B7E"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is the Number\nPrime or Composite?"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:textColor="#087830"
        android:id="@+id/Question"
        android:layout_alignTop="@+id/ScoreText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/RandNumber"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/Question"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Prime"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/PrimeButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="onPrimeClicked"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Composite"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/CompositeButton"
        android:layout_alignTop="@+id/PrimeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="onCompositeClicked"/>/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:id="@+id/ScoreText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Question"
        android:layout_toEndOf="@+id/Question" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:id="@+id/currentScoreText"
        android:layout_alignBottom="@+id/ScoreText"
        android:layout_toRightOf="@+id/ScoreText"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

</RelativeLayout>
